local MyUILibrary = {}

function MyUILibrary:CreateWindow(title)
    local ScreenGui = Instance.new("ScreenGui")
    local MainFrame = Instance.new("Frame")
    local Title = Instance.new("TextLabel")

    ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

    MainFrame.Name = "MainFrame"
    MainFrame.Parent = ScreenGui
    MainFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    MainFrame.Position = UDim2.new(0.3, 0, 0.3, 0)
    MainFrame.Size = UDim2.new(0, 400, 0, 300)
    MainFrame.Active = true
    MainFrame.Draggable = true

    Title.Name = "Title"
    Title.Parent = MainFrame
    Title.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    Title.Size = UDim2.new(1, 0, 0, 30)
    Title.Font = Enum.Font.SourceSans
    Title.Text = title
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.TextSize = 20

    local Tabs = Instance.new("Folder", MainFrame)
    Tabs.Name = "Tabs"

    return {
        ScreenGui = ScreenGui,
        MainFrame = MainFrame,
        Tabs = Tabs
    }
end

function MyUILibrary:CreateTab(window, tabName)
    local TabButton = Instance.new("TextButton")
    TabButton.Parent = window.MainFrame
    TabButton.Size = UDim2.new(0, 100, 0, 30)
    TabButton.Position = UDim2.new(#window.Tabs:GetChildren() * 0.25, 0, 0, 30)
    TabButton.Text = tabName
    TabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    TabButton.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    TabButton.Font = Enum.Font.SourceSans
    TabButton.TextSize = 20

    local TabFrame = Instance.new("Frame")
    TabFrame.Name = tabName
    TabFrame.Parent = window.Tabs
    TabFrame.Size = UDim2.new(1, 0, 1, -60)
    TabFrame.Position = UDim2.new(0, 0, 0, 60)
    TabFrame.BackgroundTransparency = 1
    TabFrame.Visible = false

    TabButton.MouseButton1Click:Connect(function()
        for _, v in ipairs(window.Tabs:GetChildren()) do
            v.Visible = false
        end
        TabFrame.Visible = true
    end)

    return TabFrame
end

function MyUILibrary:CreateToggle(tab, toggleName, callback)
    local ToggleButton = Instance.new("TextButton")
    ToggleButton.Parent = tab
    ToggleButton.Size = UDim2.new(0, 150, 0, 30)
    ToggleButton.Position = UDim2.new(0, 10, 0, (#tab:GetChildren() - 1) * 40)
    ToggleButton.Text = toggleName
    ToggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    ToggleButton.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    ToggleButton.Font = Enum.Font.SourceSans
    ToggleButton.TextSize = 20
    ToggleButton.MouseButton1Click:Connect(function()
        callback(not ToggleButton.Selected)
        ToggleButton.Selected = not ToggleButton.Selected
        ToggleButton.BackgroundColor3 = ToggleButton.Selected and Color3.fromRGB(35, 35, 35) or Color3.fromRGB(25, 25, 25)
    end)
end

function MyUILibrary:CreateSlider(tab, sliderName, min, max, default, callback)
    local SliderFrame = Instance.new("Frame")
    SliderFrame.Parent = tab
    SliderFrame.Size = UDim2.new(0, 300, 0, 50)
    SliderFrame.Position = UDim2.new(0, 10, 0, (#tab:GetChildren() - 1) * 60)
    SliderFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)

    local SliderLabel = Instance.new("TextLabel")
    SliderLabel.Parent = SliderFrame
    SliderLabel.Size = UDim2.new(1, 0, 0.5, 0)
    SliderLabel.Text = sliderName
    SliderLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    SliderLabel.BackgroundTransparency = 1
    SliderLabel.Font = Enum.Font.SourceSans
    SliderLabel.TextSize = 20

    local SliderBar = Instance.new("Frame")
    SliderBar.Parent = SliderFrame
    SliderBar.Size = UDim2.new(0.9, 0, 0.2, 0)
    SliderBar.Position = UDim2.new(0.05, 0, 0.7, 0)
    SliderBar.BackgroundColor3 = Color3.fromRGB(50, 50, 50)

    local SliderButton = Instance.new("TextButton")
    SliderButton.Parent = SliderBar
    SliderButton.Size = UDim2.new((default - min) / (max - min), 0, 1, 0)
    SliderButton.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
    SliderButton.Text = ""

    SliderButton.MouseButton1Down:Connect(function()
        local moving
        moving = game:GetService("UserInputService").InputChanged:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseMovement then
                local scale = math.clamp((input.Position.X - SliderBar.AbsolutePosition.X) / SliderBar.AbsoluteSize.X, 0, 1)
                SliderButton.Size = UDim2.new(scale, 0, 1, 0)
                callback(min + (max - min) * scale)
            end
        end)
        game:GetService("UserInputService").InputEnded:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseButton1 then
                moving:Disconnect()
            end
        end)
    end)
end

return MyUILibrary
